{
  "private": true,
  "engines": {
    "pnpm": ">=8",
    "node": ">=16"
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter \"./packages/**\" -r build",
    "build:apps": "pnpm --filter \"./apps/**\" -r build",
    "publish:packages": "pnpm --filter \"./packages/**\" -r publish --access public --no-git-checks",
    "core": "pnpm --filter core",
    "demo": "pnpm --filter demo"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.1.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.2",
    "vite": "^4.5.0",
    "vite-plugin-dts": "^3.6.3"
  },
  "packageManager": "pnpm@8.10.2"
}
